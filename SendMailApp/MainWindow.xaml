<Window x:Class="SendMailApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendMailApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <!--行-->
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <!--列-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <!--ラベル-->
        <TextBlock Grid.Row="0" Text="件名：" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="1" Text="To：" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="2" Text="Cc：" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="3" Text="Bcc：" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="4" Text="本文：" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
        <!--テキスト-->
        <TextBox x:Name="tbTitle" Grid.Column="1" Margin="5"/>
        <TextBox x:Name="tbTo" Grid.Column="1" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="tbCc" Grid.Column="1" Grid.Row="2" Margin="5"/>
        <TextBox x:Name="tbBcc" Grid.Column="1" Grid.Row="3" Margin="5"/>
        <TextBox x:Name="tbBody" Grid.Column="1" Grid.Row="4" Margin="5"/>
        <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btSend" Content="送信" HorizontalAlignment="Right" Margin="10" Width="100" Click="btSend_Click"/>
            <Button x:Name="btCancel" Content="キャンセル" HorizontalAlignment="Right" Margin="10" Width="100" Click="btCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
